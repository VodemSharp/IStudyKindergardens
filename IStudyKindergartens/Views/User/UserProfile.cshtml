@model IStudyKindergartens.Models.SiteUser
@{
    string phoneNumber = ViewBag.PhoneNumber;
    ViewBag.Link = "/User";
    ViewBag.Title = Model.FullName;
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="form-group has-feedback col-md-3">
                            <div class="img-thumbnail" margin-bottom: 5px;">
                                <img id="userPicture" style="width: 100%;" src="@ViewBag.Picture" />
                            </div>
                        </div>
                        <div class="form-group has-feedback col-md-9">
                            <div class="row">
                                <h2 class="page-header">@Model.Surname @Model.Name @Model.FathersName</h2>
                            </div>
                            <div class="row">
                                <div class="form-group has-feedback col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DateOfBirth, "Дата народження")
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="glyphicon glyphicon-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.DateOfBirth, new { @placeholder = "Дата народження", @class = "form-control", @readonly = "" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group has-feedback col-md-4">
                                    @Html.LabelFor(m => m.ApplicationUser.Email, "Емейл")
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="glyphicon glyphicon-envelope"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.ApplicationUser.Email, new { @class = "form-control", @placeholder = "Емейл", @readonly = "" })
                                    </div>
                                </div>
                                <div class="form-group has-feedback col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ApplicationUser.PhoneNumber, "Номер телефону", new { @readonly = "" })
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                +38
                                            </div>
                                            @Html.TextBox("PhoneNumber", phoneNumber, new { @placeholder = "Номер телефону", @class = "form-control", @readonly = "" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group has-feedback col-md-6">
                                    <div class="col-md-12">
                                        <a href="/WriteTo/@Model.Id" class = "btn btn-default btn-block btn-flat">Написати користувачу</a>
                                    </div>
                                </div>
                                <div class="form-group has-feedback col-md-6">
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-default btn-block btn-flat" value="Добавити користувача в контакти">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
