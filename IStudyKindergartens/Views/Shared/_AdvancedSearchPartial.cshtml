<div class="box box-primary">
    <div class="box-body">
        @using (Html.BeginForm("AdvancedSearch", "Home", FormMethod.Get))
        {
            <div class="input-group">
                @Html.TextBox("search", "", htmlAttributes: new { @class = "form-control", @placeholder = "Введіть назву дошкільного навчального закладу..." })
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary btn-flat" value="Пошук" />
                </span>
            </div>
            <div class="form-group" style="margin-top: 0px; padding: 10px; border: 1px solid #cccccc; border-top: 0px;">
                <div class="row">
                    <div class="col-md-6">
                        <label style="font-weight: normal;">Шукати за...</label>
                        <div class="radio" style="margin-top: 0;">
                            <label>
                                @Html.RadioButton("searchBy", "Name", true, htmlAttributes: new { @id = "searchByName" })
                                Назвою садочку
                            </label>
                        </div>
                        <div class="radio" style="margin-bottom: 0;">
                            <label>
                                @Html.RadioButton("searchBy", "Address", false, htmlAttributes: new { @id = "searchByAddress" })
                                Адресою садочку
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label style="font-weight: normal;">Сортувати рейтинг по...</label>
                        <div class="radio" style="margin-top: 0;">
                            <label>
                                @Html.RadioButton("sortBy", "Desc", true)
                                Спаданню
                            </label>
                        </div>
                        <div class="radio" style="margin-bottom: 0;">
                            <label>
                                @Html.RadioButton("sortBy", "Asc", false)
                                Зростанню
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $("#searchByName").on("click", function () {
        $("#search").attr("placeholder", "Введіть назву дошкільного навчального закладу...");
    });
    $("#searchByAddress").on("click", function () {
        $("#search").attr("placeholder", "Введіть адресу дошкільного навчального закладу...");
    });
</script>