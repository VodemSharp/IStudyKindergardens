@model IStudyKindergartens.Models.SendMessageToViewModel
@{
    ViewBag.Link = "/MyMessages";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                @if (User.IsInRole("Administrator"))
                {
                    <div class="col-md-6 form-group">
                        <a style="width:100%;" class="btn btn-primary btn-flat" href="/MyMessages">Вхідні повідомлення</a>
                    </div>
                    <div class="col-md-6 form-group">
                        <a style="width:100%;" class="btn btn-primary btn-flat" href="/SentMessages">Вихідні повідомлення</a>
                    </div>
                }
                else
                {
                    <div class="col-md-4 form-group">
                        <a style="width:100%;" class="btn btn-primary btn-flat" href="/WriteMessage">Надіслати повідомлення</a>
                    </div>
                    <div class="col-md-4 form-group">
                        @if (ViewBag.IsSent)
                        {
                            <a style="width:100%;" class="btn btn-primary btn-flat" href="/MyMessages">Вхідні повідомлення</a>
                        }
                        else
                        {
                            <a style="width:100%;" class="btn btn-tumblr btn-flat" href="/MyMessages">Вхідні повідомлення</a>
                        }
                    </div>
                    <div class="col-md-4 form-group">
                        @if (ViewBag.IsSent)
                        {
                            <a style="width:100%;" class="btn btn-tumblr btn-flat" href="/SentMessages">Вихідні повідомлення</a>
                        }
                        else
                        {
                            <a style="width:100%;" class="btn btn-primary btn-flat" href="/SentMessages">Вихідні повідомлення</a>
                        }
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Надіслати повідомлення</h3>
                        </div>
                        <div class="box-body">
                            @using (Html.BeginForm("WriteTo", "User", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.ToUserId)
                                    @Html.TextBoxFor(m => m.ToUser, new { @disabled = "", @class = "form-control", @placeholder = "Введіть тему повідомлення..." })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Theme, new { @class = "form-control", @placeholder = "Введіть тему повідомлення..." })
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Text, htmlAttributes: new { @placeholder = "Введіть текст повідомлення...", @class = "form-control", @rows = "10", @style = "width: 100%;" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-flat" style="width: 100%;" value="Написати повідомлення">
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>