@model IStudyKindergartens.Models.Group

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Занесення нового типу групи в базу даних</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="form-group has-feedback col-md-12">
                            @using (Html.BeginForm("AddGroup", "Admin", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="form-group has-feedback col-md-12">
                                        @Html.LabelFor(m => m.Value, "Новий тип групи")
                                        @Html.TextBoxFor(m => m.Value, new { @class = "form-control", @placeholder = "Введіть новий тип групи" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-primary btn-block btn-flat" value="Добавити">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
</section>