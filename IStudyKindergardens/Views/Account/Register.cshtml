@model IStudyKindergardens.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Реєстрація";
}

<!--Rendered body-->

<p class="login-box-msg">Реєстрація</p>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.Surname, "Прізвище")
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = "Прізвище" })
            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.Name, "Ім'я")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Ім'я" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.FathersName, "Ім'я по батькові")
            @Html.TextBoxFor(m => m.FathersName, new { @class = "form-control", @placeholder = "Ім'я по батькові" })
            @Html.ValidationMessageFor(m => m.FathersName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.DateOfBirth, "Дата народження")
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                    @Html.TextBoxFor(m => m.DateOfBirth, new { @placeholder = "Дата народження", @class = "form-control", @data_inputmask = "'alias': 'dd/mm/yyyy'", @data_mask = "" })
                </div>
                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.Email, "Email")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, "Номер телефону")
                <div class="input-group">
                    <div class="input-group-addon">+38</div>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Номер телефону", @class = "form-control", @data_inputmask = "'mask': '(999) 999-9999'", @data_mask = "" })
                </div>
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.Password, "Пароль")
            @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Пароль" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback col-md-6">
            @Html.LabelFor(m => m.ConfirmPassword, "Підтвердіть пароль")
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control", @placeholder = "Підтвердіть пароль" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group has-feedback col-md-12">
            <div class="">
                <input type="submit" class="btn btn-primary btn-block btn-flat" value="Зареєструватись">
            </div>
        </div>
    </div>
}
@Html.ActionLink("Я вже маю аккаунт", "Login", "Account", null, new { @class = "text-center" })

<!--/Rendered body-->

@Scripts.Render("~/js/inputmask")

<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '0%' // optional
        });
    });
    $(function () {
        $("[data-mask]").inputmask();
    });
</script>