@model IStudyKindergardens.Models.RegisterViewModel

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Занесення користувача в базу даних</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="form-group has-feedback col-md-3">
                            <img class="img-thumbnail" style="width: 100%; margin-bottom: 5px;" src="~/Images/Default/anonym.png" />
                            <div class="img-thumbnail" style="margin-bottom: 5px;">
                                <input type="file" name="upload" class="btn btn-danger btn-block btn-flat" />
                                <input type="submit" class="btn btn-danger btn-block btn-flat" value="Завантажити" />
                            </div>
                            <div class="img-thumbnail" style="width: 100%">
                                <input type="submit" class="btn btn-danger btn-block btn-flat" value="Видалити картинку" />
                            </div>
                        </div>
                        <div class="form-group has-feedback col-md-9">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="row">
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.Surname, "Прізвище")
                                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = "Прізвище" })
                                        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.Name, "Ім'я")
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Ім'я" })
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.FathersName, "Ім'я по батькові")
                                        @Html.TextBoxFor(m => m.FathersName, new { @class = "form-control", @placeholder = "Ім'я по батькові" })
                                        @Html.ValidationMessageFor(m => m.FathersName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.DateOfBirth, "Дата народження")
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(m => m.DateOfBirth, new { @placeholder = "Дата народження", @class = "form-control", @data_inputmask = "'alias': 'dd/mm/yyyy'", @data_mask = "" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.Email, "Емейл")
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Емейл" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.PhoneNumber, "Номер телефону")
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    +38
                                                    @*<i class="fa fa-phone"></i>*@
                                                </div>
                                                @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Номер телефону", @class = "form-control", @data_inputmask = "'mask': '(999) 999-9999'", @data_mask = "" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.Password, "Пароль")
                                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Пароль" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group has-feedback col-md-6">
                                        @Html.LabelFor(m => m.ConfirmPassword, "Підтвердіть пароль")
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control", @placeholder = "Підтвердіть пароль" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-primary btn-block btn-flat" value="Добавити">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
</section>